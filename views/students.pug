include profile
    block loadStyle
        link(rel="stylesheet" href="stylesheets/students.css")
    block loadScript
        script(src="javascripts/students.js") 
    block content
        p.medium-font Students...
        div.card.container-fuild
            div.card-body.border-none
                div.row
                    div.col-md-3
                        input(type="text" class="input remove-focus form-control" placeholder="Search")
                    div.col-md-6
                    div.col-md-3
                        button.btn.btn-light.mx-4 Export
                        button.btn.btn-primary(data-bs-toggle="modal" data-bs-target="#student-modal") Add Students
        div.modal.animate__animated.animate__slideInDown.animate-faster#student-modal
            div.modal-dialog.modal-dialog-centered.modal-lg
                div.modal-content
                    div.modal-body
                        h4.medium-font Students
                        form 
                            div.row
                                div.col-md-6
                                    div.form-group
                                        input(type="text" name="" placeholder="Student Name")
                                div.col-md-6
