div.modal.animate__animated.animate__zoomIn#signup-modal
    div.modal-dialog.modal-lg.modal-dialog-centered
        div.modal-content
            div.modal-body.p-5
                div.row
                    div.col-md-6.d-flex.justify-content-center.align-items-center
                        img(src="images/signup.jpg" width="100%" alt="" srcset="")
                    div.col-md-6
                        h1.display-4.fw-bold(style="font-size:34px") Signup Here
                        form#signup-form
                            div.form-group.mb-3
                                input.form-control.p-3.company-name(type="text" placeholder="Company Name" name="company")
                                span.company-name-error.text-danger
                            div.form-group.mb-3
                                input.form-control.p-3.company-email(type="email" placeholder="Email" name="email")
                                span.company-email-error.text-danger
                            div.form-group.mb-3
                                input.form-control.p-3(type="number" placeholder="Mobile" name="mobile")
                            div.form-group.mb-3
                                input.form-control.p-3(type="password" placeholder="Password" name="password")
                            div.form-group.mb-1
                                button.btn.btn-primary.signup-btn(type="submit") SignUp
                                button.btn.btn-danger.disabled.d-none.before-send
                                    span.spinner-grow.spinner-grow-sm
                                    span Processing...
                            p Already have an Account ? 
                                a(href="#" id="login-modal-req") Login